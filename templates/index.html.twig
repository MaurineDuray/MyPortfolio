{% endblock %}
{% block body %}

	{% include "partials/header.html.twig" %}

	<div class="slide" id="homepage">
		<div class="container">
			<div class="row">
				<div class="left">
					
					<img id="logo" src={{asset('images/M.png')}} alt="mon_logo">
					
				</div>
				<div class="right">
					<div class="wrapper">
						
						<h3>HELLO ,</h3>
						<h1>I'M <span>MAURINE</span></h1>
